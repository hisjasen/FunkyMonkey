@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="HomeController as homeCtrl">
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <form id="blah" role="form" action="@Url.Action("SubmitForm", "Home")">
            <div class="form-group">
                <select multiple="multiple" size="2" class="form-control"
                        ng-model="homeCtrl.foo" ng-options="opt.label for opt in homeCtrl.options track by opt.value"></select>
            </div>
            <div class="form-group">
                <input type="text" value="" placeholder="stuffs" class="form-control" />
            </div>
            <button id="doItBtn" class="btn btn-success" type="button">Do It</button>
        </form>
    </div>
    <div class="col-md-4">
        <button ng-click="homeCtrl.showModal()" class="btn btn-default">Gais Modal</button>
        <button ng-click="homeCtrl.showFilterModal()" class="btn btn-info">Filter Modal</button>
    </div>
</div>
</div>

@section scripts {
    <script>
        $(document).ready(function ()
        {
            $("#doItBtn").on("click", function (e)
            {
            });
        });
    </script>
}